{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": { 
    "@typescript-eslint/no-var-requires": "off",
    "@typescript-eslint/ban-types": ["error",
      {
          "types": {
              "{}": false,
              "Object": false,
              "object": false
          },
          "extendDefaults": true
      }
  ]
  }
}